{
    "tasks": [
        {
            "type": "shell",
            "label": "Build Engine",
            "windows": {
                "command": "${workspaceFolder}/bilt-engine/build.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/bilt-engine/build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/bilt-engine"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Build Tests",
            "windows": {
                "command": "${workspaceFolder}/test-engine/build.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/test-engine/build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/test-engine"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build Bilt",
            "windows": {
                "command": "${workspaceFolder}/build-bilt.bat",
            },
            "linux": {
                "command": "${workspaceFolder}/build-bilt.sh",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}